# skhd hotkey configuration for yabai window manager

# Window focus (alt + cmd = focus)
alt + cmd - h : yabai -m window --focus west
alt + cmd - j : yabai -m window --focus south
alt + cmd - k : yabai -m window --focus north
alt + cmd - l : yabai -m window --focus east

# Window movement (alt + cmd + shift = move)
alt + cmd + shift - h : yabai -m window --warp west
alt + cmd + shift - j : yabai -m window --warp south
alt + cmd + shift - k : yabai -m window --warp north
alt + cmd + shift - l : yabai -m window --warp east

# Window resize (alt + cmd + ctrl = resize)
alt + cmd + ctrl - h : yabai -m window --resize left:-50:0; \
                      yabai -m window --resize right:-50:0
alt + cmd + ctrl - j : yabai -m window --resize bottom:0:50; \
                      yabai -m window --resize top:0:50
alt + cmd + ctrl - k : yabai -m window --resize top:0:-50; \
                      yabai -m window --resize bottom:0:-50
alt + cmd + ctrl - l : yabai -m window --resize right:50:0; \
                      yabai -m window --resize left:50:0

# Equalize size of windows
alt + cmd + ctrl - e : yabai -m space --balance

# Enable / Disable gaps in current workspace
alt + cmd + ctrl - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Rotate windows clockwise and anticlockwise
alt + cmd - r : yabai -m space --rotate 270
alt + cmd + shift - r : yabai -m space --rotate 90

# Rotate on X and Y Axis
alt + cmd + shift - x : yabai -m space --mirror x-axis
alt + cmd + shift - y : yabai -m space --mirror y-axis

# Set insertion point for focused container
alt + cmd + ctrl - h : yabai -m window --insert west
alt + cmd + ctrl - j : yabai -m window --insert south
alt + cmd + ctrl - k : yabai -m window --insert north
alt + cmd + ctrl - l : yabai -m window --insert east

# Float / Unfloat window
alt + cmd - space : yabai -m window --toggle float; \
                   yabai -m window --toggle border

# Make window zoom to fullscreen
alt + cmd + shift - f : yabai -m window --toggle zoom-fullscreen

# Make window zoom to parent node
alt + cmd - f : yabai -m window --toggle zoom-parent

# Toggle window split type
alt + cmd - e : yabai -m window --toggle split

# Application launchers using alt + cmd combinations
alt + cmd - return : open -na /Applications/Ghostty.app
alt + cmd - b : open -na "/Applications/Firefox.app"
alt + cmd - c : open -na "/Applications/Google Chrome.app"
alt + cmd - f : open -na /Applications/Finder.app

# Restart yabai
alt + cmd + ctrl - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
